# --- sound control
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# --- brightness control
# also can be nvidia_0
bindsym XF86MonBrightnessUp exec brightnessctl set -d intel_backlight 1%+
bindsym XF86MonBrightnessDown exec brightnessctl set -d intel_backlight 1%-

# --- launchers
bindsym $mod+Return exec kitty
bindcode $mod+40 exec "rofi -modi drun,run -show drun -show-icons"
#bindcode $mod+40 exec "rofi"
bindsym Print exec flameshot gui --path ~/picture/screenshot --clipboard
bindsym $mod+Shift+c exec xcolor

# --- bar
bar {
	font pango:Iosevka NFM 6
	position top
	tray_output primary

	#status_command i3status-rs

	status_command bumblebee-status \
			-t gruvbox-powerline \
			-m memory -p memory.format="{used} {percent:2.2f}%" \
			-m disk:home -p home.path="/home" home.format="~ {used} {percent:2.2f}%" home.system="SI" \
			-m disk:root -p root.path="/" root.format="{path} {used} {percent:2.2f}%" root.system="SI" \
			-m layout \
			-m redshift -p redshift.location="manual" redshift.lat="39.93" redshift.long="32.85" redshift.adjust="true" \
			-m brightness -p brightness.step=1 \
			-m pulseout \
			-m battery \
			-m datetime -p datetime.format="%a %d/%m %H:%M:%S" \

	#-m pulseout -p pulseout.showdevicename="true" pulseout.alsa_output.pci-0000_01_00.1.hdmi-stereo="Speakers" \
	#-m pulsein \
	
	colors {
		# Whole color settings
#		background #3c3836
		background #1d2021
		statusline #ebdbb2
		separator  #666666
		focused_workspace  #b8bb26 #b8bb26 #ebdbb2
		active_workspace   #504945 #504945 #ebdbb2
		inactive_workspace #504945 #504945 #ebdbb2
		urgent_workspace   #cc241d #cc241d #504945
	}
}


